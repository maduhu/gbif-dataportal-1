<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>portal</groupId>
  <artifactId>delete</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>GBIF Portal Delete Resources</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>3.1.13</version>
    </dependency>
  </dependencies>

 <build>
    <directory>../../../target</directory>
    <outputDirectory>../../../target/delete/classes</outputDirectory>
    <testOutputDirectory>../../../target/delete/test-classes</testOutputDirectory>
    <sourceDirectory>./</sourceDirectory>
	  <plugins>
	    <plugin>
	      <groupId>org.apache.maven.plugins</groupId>
	      <artifactId>maven-compiler-plugin</artifactId>
	      <configuration>
	        <source>1.5</source>
	        <target>1.5</target>
	      </configuration>
	    </plugin>
		<plugin>
		   <groupId>org.apache.maven.plugins</groupId>
		   <artifactId>maven-assembly-plugin</artifactId>
	        <configuration>
	          <descriptors>
	            <descriptor>../../assemble/dir.xml</descriptor>
	          </descriptors>
	        </configuration>
	    </plugin>
	  </plugins>
	</build>
 <repositories>
    <repository>
      <id>gbif-remote</id>
      <name>gbif-remote</name>
      <url>http://tools.gbif.org/maven/repository</url>
    </repository>
  </repositories>	
</project>